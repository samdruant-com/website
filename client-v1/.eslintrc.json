{
	"root": true,
	"env": {
		"node": true
	},
	"extends": ["plugin:nuxt/recommended", "plugin:vue/vue3-recommended"],
	"parserOptions": {
		"parser": "babel-eslint"
	},
	"rules": {
		"comma-dangle": ["error", "never"],
		"indent": ["error", "tab"],
		"no-tabs": ["error", { "allowIndentationTabs": true }],
		"prefer-const": ["error"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],

		// vue specific rules below
		"vue/attribute-hyphenation": ["error", "always"],
		"vue/component-name-in-template-casing": ["error", "kebab-case"],
		"vue/custom-event-name-casing": ["error"],
		"vue/html-closing-bracket-newline": [
			"error",
			{ "singleline": "never", "multiline": "never" }
		],
		"vue/html-indent": [
			"error",
			"tab",
			{
				"attribute": 1,
				"baseIndent": 1,
				"closeBracket": 0,
				"alignAttributesVertically": true
			}
		],
		"vue/script-indent": ["warn", "tab"],
		"vue/script-setup-uses-vars": ["off"],
		// vuetify specific
		"vue/valid-v-slot": "off",
		"vue/no-v-for-template-key-on-child": "off"
	},
	"overrides": [{ "files": ["*.vue"], "rules": { "indent": "off" } }]
}

/* eslint-vue rules: https://eslint.vuejs.org/rules/ */
