{
	"root": true,
	"env": {
		"browser": true,
		"node": true
	},
	"extends": ["plugin:vue/vue3-strongly-recommended", "eslint:recommended"],
	"rules": {
		"no-tabs": ["error", { "allowIndentationTabs": true }],
		"indent": ["error", "tab"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"vue/script-indent": ["warn", "tab", { "baseIndent": 1 }],
		"vue/custom-event-name-casing": ["error"],
		"vue/attribute-hyphenation": ["error", "always"],
		"vue/html-indent": [
			"error",
			"tab",
			{
				"attribute": 1,
				"baseIndent": 1,
				"closeBracket": 0,
				"alignAttributesVertically": true
			}
		],
		"vue/html-closing-bracket-newline": [
			"error",
			{
				"singleline": "never",
				"multiline": "never"
			}
		]
	},
	"overrides": [
		{
			"files": ["*.vue"],
			"rules": {
				"indent": "off"
			}
		}
	]
}
