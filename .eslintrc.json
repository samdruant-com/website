{
	"root": true,
	"env": {
		"node": true
	},
	"extends": [
		"plugin:nuxt/recommended",
		"plugin:vue/vue3-recommended"
	],
	"parserOptions": {
		"parser": "babel-eslint"
	},
	"rules": {
		"indent": ["error", "tab"],
		"no-tabs": ["error", { "allowIndentationTabs": true }],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"prefer-const": ["error"],
		"comma-dangle": ["error", "never"],

		// vue specific rules below
		"vue/script-setup-uses-vars": ["off"],
		"vue/script-indent": ["warn", "tab"],
		"vue/custom-event-name-casing": ["error"],
		"vue/attribute-hyphenation": ["error", "always"],
		"vue/html-closing-bracket-newline": [ "error", { "singleline": "never", "multiline": "never" } ],
		"vue/html-indent": [ "error", "tab", { "attribute": 1, "baseIndent": 1, "closeBracket": 0, "alignAttributesVertically": true }],
		// vuetify specific
		"vue/valid-v-slot": "off",
		"vue/no-v-for-template-key-on-child": "off"
	},
	"overrides": [ {"files": ["*.vue"], "rules": { "indent": "off" } } ]
}

/* eslint-vue rules: https://eslint.vuejs.org/rules/ */
